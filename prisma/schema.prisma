// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String?
  lastName  String?
  phone     String?
  address   String?
  apartment String?
  city      String?
  zip       Int?
  permittedPurchases PermittedPurchase[]
  Orders Order[]
  createdAt DateTime @default(now())
  banned    Boolean  @default(false)
}

model PermittedPurchase {
  id        String      @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  order     Order?
  wine      Wine     @relation(fields: [wineId], references: [id])
  wineId    Int
  createdAt DateTime @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  permittedPurchase PermittedPurchase @relation(fields: [permittedPurchaseId], references: [id])
  userId    Int
  permittedPurchaseId String @unique
  createdAt DateTime @default(now())
}

model Wine {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  image     String?
  price     Float
  quantityAvailable  Int
  permittedPurchases PermittedPurchase[]
  createdAt DateTime @default(now())
}